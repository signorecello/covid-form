{
    "compilerOptions": {
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "lib": ["es2018"],
      "module": "commonjs",
      "target": "es2018",
      "baseUrl": ".",
      "paths": {
        "*": ["src/node_modules/*", "src/types/*"]
      },
      "typeRoots": ["src/node_modules/@types", "src/types"],
      "outDir": "./built"
    },
    "include": ["./src/**/*", "jest.config.js"],
    "exclude": ["src/node_modules"]
  }